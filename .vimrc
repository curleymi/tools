filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
" Syntax highlighting
syntax on
" add line numbers
set number
" set line number indentation
set numberwidth=3
" set line number color
highlight linenr ctermfg=grey
" set line breaks
set wrap
" text width = 80 chars
set tw=80
" linebreak on white space instead of between chars
set linebreak
" mouse enabled
set mouse=a
